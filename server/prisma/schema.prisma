generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id() @default(uuid())
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  firstName     String
  lastName      String
  phoneNumber   String
  email         String
  password      String
  description   String
  image         String
  role          Role            @default(USER)
  address       String?
  addressWallet String?
  groups        UsersOnGroups[]
}

model Group {
  id                 String              @id() @default(uuid())
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  name               String
  description        String
  image              String?
  phoneNumber        String?
  address            String?
  user               UsersOnGroups[]
  electionCommission ElectionCommission?
}

model UsersOnGroups {
  userId     String
  groupId    String
  user       User     @relation(fields: [userId], references: [id])
  group      Group    @relation(fields: [groupId], references: [id])
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([userId, groupId])
}

model ElectionCommission {
  id        String   @id() @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  groupId   String   @unique()
  group     Group    @relation(fields: [groupId], references: [id])
}

enum Role {
  USER
  ADMIN
  ELECTIONCOMMISSION
  GROUP
}
